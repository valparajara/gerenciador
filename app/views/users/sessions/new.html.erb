<h2>Login</h2>

<%= form_for(resource, as: resource_name, html: {class: 'form-horizontal'},url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :email, {class: "col-sm-2 control-label"} %>
        <div class="col-sm-10">
          <%= f.email_field :email, {class: "form-control", placeholder: "Email", autofocus: true} %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, {class: "col-sm-2 control-label"} %>
        <div class="col-sm-10">
          <%= f.password_field :password,  {class: "form-control", placeholder: "Senha", autocomplete: "off" } %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>
      <% end -%>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Entrar", {class: 'btn btn-default'} %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render "users/shared/links" %>
